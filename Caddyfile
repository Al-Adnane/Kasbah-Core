api.kasbahcore.com {
    reverse_proxy kasbah-api:8002
    
    header {
        Strict-Transport-Security "max-age=31536000;"
        X-Content-Type-Options "nosniff"
        X-Frame-Options "DENY"
    }
    
    rate_limit {
        zone api {
            key {remote_ip}
            events 1000
            window 1m
        }
    }
}
